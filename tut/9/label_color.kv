<Button>
    font_size: 40
    background_normal: ''
    background_color: (0, 1, 0, 1)

<Label>
    font_size: 70

<MyLayout>

    BoxLayout:
        
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Hello 1"
            background_color: (70/255.0, 145/255.0, 219/255.0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            color: (0, 1, 0, 1)
            bold: True
            italic: True
            outline_color: (0, 0, 0)
            outline_width: 5

        Label:
            text: "Hello 2"

        TextInput:
            multiline: True

        Button:
            text: 'Button 1'
            font_size: 40
            background_color: (1, 0, 0, 1)

        Button:
            text: 'Button 2'