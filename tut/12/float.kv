<Button>
    font_size: 40
    size_hint: (0.3, 0.3)

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            pos_hint: {"top":1, "left": 1}

        Button:
            text: "Top Right"
            pos_hint: {"top":1, "right": 1}

        Button:
            text: "Center"
            pos_hint: {'top': 0.65, "x": 0.35}

        Button:
            text: "Bottom Left"
            pos_hint: {"bottom":1, "left": 1}

        Button:
            text: "Bottom Right"
            pos_hint: {"bottom":1, "right": 1}