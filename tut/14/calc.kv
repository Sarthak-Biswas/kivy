<calLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_display
            text: "0"
            font_size: 80
            multiline: False
            halign: 'right'
            size_hint: 1, 0.15

        GridLayout:
            cols: 4
            rows: 5

            #Row1
            Button:
                font_size: 32
                text: "%"
            Button:
                font_size: 32
                text: "CE"
                on_press: root.calc_clear()
            Button:
                font_size: 32
                text: "C"
            Button:
                font_size: 32
                text: "/"

            #Row2
            Button:
                font_size: 32
                text: "7"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "8"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "9"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "x"

            #Row3
            Button:
                font_size: 32
                text: "4"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "5"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "6"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "-"

            #Row4
            Button:
                font_size: 32
                text: "1"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "2"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "3"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "+"

            #Row5
            Button:
                font_size: 32
                text: "+/-"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "0"
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "."
                background_color: (160/255.0, 160/255.0, 160/255.0, 1)
            Button:
                font_size: 32
                text: "="
        