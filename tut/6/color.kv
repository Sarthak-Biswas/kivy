#: import utils kivy.utils

<MyGridLayout>

    name: name
    pizza: pizza
    price: price
    display: display

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name: "
            TextInput
                id: name
                multiline: False

            Label:
                text: "Pizza: "
            TextInput
                id: pizza
                multiline: False

            Label:
                text: "Price: "
            TextInput
                id: price
                multiline: False

        Button:
            text: "Submit"
            font_size: 40
            on_press: root.onClick()
            background_normal: ''
            # background_color: (4/255.0, 173/255.0, 219/255.0, 1)
            background_color: utils.get_color_from_hex('#db467d')

        Label:
            id: display
            text: ""